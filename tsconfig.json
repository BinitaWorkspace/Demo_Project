{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@pages/*": ["src/pages/*"],
      "@constants/*": ["constants/*"],
      "@utils/*": ["src/utils/*"]
    },
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "test/**/*", "constants/**/*", "test/sample.spec.ts"],
  "exclude": ["node_modules"]
}